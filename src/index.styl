.editor-js-quote-plugin {
  display grid
  gap 16px

  &__header {
    display flex
    align-items stretch
    justify-content stretch
    gap 16px
  }

  &__image {
    width 100px
    height 100px
    display inline-flex
    flex-shrink 0
    position relative

    img {
      width 100%
      height 100%
      object-fit cover
      object-position center
      background #f2f2f2
      border-radius 5px
    }

    button {
      position absolute
      right 8px
      top 8px
      width 26px
      height 26px
      display inline-flex
      align-items center
      justify-content center
      border none
      background #e9e9e9
      border-radius 5px
      cursor pointer

      &:hover {
        background #e2e2e2
      }

      svg {
        width 24px
        height 24px
      }
    }
  }

  &__image-input {
    position relative
    width 100px
    height 100px
    border-radius 5px
    border 1px dashed #333
    display flex
    flex-direction column
    justify-content center
    align-items center
    cursor pointer
    flex-shrink 0
    padding 5px
    gap 4px
    box-sizing border-box

    input {
      display none
    }

    svg {
      width 24px
      height 24px
      margin 0 auto
    }

    span {
      text-align center
      color #333
      font-size 0.75em
    }
  }

  &__author {
    display grid
    gap 16px
    width 100%
  }
}